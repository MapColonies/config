{
  "name": "@map-colonies/config",
  "version": "0.0.1",
  "description": "Config package for MapColonies with support for central config management",
  "main": "./dist/index.js",
  "scripts": {
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "prelint:fix": "npm run format:fix",
    "prelint": "npm run format",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "prebuild": "npm run clean",
    "build": "tsc --project tsconfig.build.json",
    "start": "npm run build && cd dist && node ./index.js",
    "clean": "rimraf dist",
    "prepublish": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MapColonies/config.git"
  },
  "author": "MapColonies",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/MapColonies/config/issues"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "files": [
    "dist/**/*"
  ],
  "homepage": "https://github.com/MapColonies/config#readme",
  "dependencies": {
    "@map-colonies/schemas": "0.0.1",
    "config": "^3.3.11",
    "lodash": "^4.17.21",
    "undici": "^6.18.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@map-colonies/eslint-config": "^4.0.0",
    "@types/config": "^3.3.4",
    "@types/lodash": "^4.17.0",
    "@types/node": "^14.14.12",
    "commitlint": "^11.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.56.0",
    "husky": "^4.3.5",
    "json-schema-to-ts": "^3.0.1",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "typed-emitter": "^2.1.0",
    "typescript": "^5.4.5"
  }
}
